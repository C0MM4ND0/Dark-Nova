{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": false,
        "outDir": "build",
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowUnreachableCode": false,
        "alwaysStrict": true,
        //"declaration": true,
        //"declarationDir": "build/@types",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "@core/*": ["game/core/*"],
            "@db/*": ["db/*"],
            "@logger/*": ["logger/*"],
            "@logger": ["logger/index"],
            "@nova-view/*": ["game/view/*"],
            "@config": ["config/index"],
            "@config/*": ["config/*"]
        },
        "incremental": true
    },
    "include": [
        "src"
    ],
    "compileOnSave": true
}